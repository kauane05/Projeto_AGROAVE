<Window x:Class="AppInterfaces.CadastrarEstoqueProducao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppInterfaces"
        mc:Ignorable="d"
        Title="CadastrarEstoqueProducao" Height="450" Width="850">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="CADASTRAR ESTOQUE (PRODUÇÃO)" VerticalAlignment="Top" FontFamily="Arial" Height="24" Width="340" FontSize="16" FontWeight="Bold"/>
        <Label Content="NOME DO PRODUTO:" HorizontalAlignment="Left" Margin="100,63,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial"/>
        <ComboBox HorizontalAlignment="Left" Margin="100,89,0,0" VerticalAlignment="Top" Width="218" TextBlock.FontFamily="Arial"/>

        <Label Content="CÓDIGO:" HorizontalAlignment="Left" Margin="100,143,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial"/>
        <TextBox HorizontalAlignment="Left" Margin="102,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" RenderTransformOrigin="0.5,0.5" TextBlock.FontFamily="Arial">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.044"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

        <Label Content="DESCRIÇÃO:" HorizontalAlignment="Left" Margin="100,227,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial"/>
        <TextBox HorizontalAlignment="Left" Margin="100,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="99" TextBlock.FontFamily="Arial"/>

        <Label Content="QUANTIDADE:" HorizontalAlignment="Left" Margin="496,63,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial"/>
        <TextBox HorizontalAlignment="Left" Margin="496,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" Height="22" TextBlock.FontFamily="Arial"/>

        <Label Content="DATA DE FABRICAÇÃO:" HorizontalAlignment="Left" Margin="496,143,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial"/>
        <TextBox HorizontalAlignment="Left" Margin="496,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextBlock.FontFamily="Arial"/>

        <Label Content="DATA DE VALIDADE:" HorizontalAlignment="Left" Margin="496,227,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial"/>
        <TextBox HorizontalAlignment="Left" Margin="496,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" RenderTransformOrigin="0.5,0.5" TextBlock.FontFamily="Arial">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Content="CONSULTAR ESTOQUE" HorizontalAlignment="Left" Margin="475,313,0,0" VerticalAlignment="Top" Width="217" TextBlock.FontFamily="Arial" Background="#FFB4E1F9"/>
        <Button Content="VOLTAR" HorizontalAlignment="Left" Margin="133,377,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" Foreground="Black" BorderBrush="#FF77BBE0" Background="#FF77BBE0" Height="25" Width="95"/>
        <Button Content="SALVAR" HorizontalAlignment="Left" Margin="414,377,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" Foreground="Black" BorderBrush="#FF77BBE0" Background="#FF77BBE0" Height="25" Width="96"/>
        <Button Content="CANCELAR" HorizontalAlignment="Left" Margin="673,377,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" Foreground="Black" BorderBrush="#FF77BBE0" Background="#FF77BBE0" Height="25" Width="95"/>
    </Grid>
</Window>
